@using SanayiPazarim.Models;
@model IEnumerable<ProductModel>
<div class="row">

    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top figure-img img-fluid rounded" src="~/Upload/@urun.Image" alt="@urun.Name">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@urun.Id"> @urun.Name</a>
                    </h4>
                    <p class="card-text pt-2">
                        @urun.Description
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        @urun.SubDescription
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        Ürünü incele
                    </a>
                </div>
            </div>
        </div>
    }

</div>
