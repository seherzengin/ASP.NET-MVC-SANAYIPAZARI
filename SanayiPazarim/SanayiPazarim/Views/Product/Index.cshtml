@model IEnumerable<SanayiPazarim.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";//Bu layout'u ekleyerek, adminlayout'un bu sayfayı görüntüleyebilmesini sağladık.
}

<div class="container pb-5">

    <h2>Yeni Ürün</h2>
    <hr />
    <p>
        @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-success" })
    </p>
    <hr />
    <table class="table table-striped table-hover ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="col-sm-6 col-md-6">
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductFinishedTime)
            </th>
            <th style="width: 140px;"></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/Upload/product-1.jpg" width="70" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="table table-bordered">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.IsHome)
                {
                    <label class="badge bg-success">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge bg-danger">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @if (item.IsApproved)
                {
                    <label class="badge bg-success">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge bg-danger">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductFinishedTime)
            </td>
            <td class="table table-bordered">
                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Teklifler", "Index","Offer", null, new { @class = "btn btn-success btn-sm mt-2" })
            </td>
        </tr>
        }

    </table>
</div>