@model IEnumerable<SanayiPazarim.Entity.Category>
@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];//seçilen kategorinin active görünmesi için oluşturduğumuz kod bloğu.
}

<ul class="list-group">
    <li class="list-group-item list-group-item-action">
        <a href="/Home/List">
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
            TÜM KATEGORİLER
        </a>
    </li>
    @foreach (var item in Model)
    {
        if (selectedCategory != null)
        {
            if (item.Id == int.Parse(selectedCategory.ToString()))
            {
                //seçilen kategori ile route id si birbirine eşit.
                <a href="/Home/List/@item.Id" class="list-group-item active">
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                    @item.Name
                </a>

            }
            else
            {
                <a href="/Home/List/@item.Id" class="list-group-item">
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                    @item.Name
                </a>
            }
        }
        else
        {
            <a href="/Home/List/@item.Id" class="list-group-item">
                <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                @item.Name
            </a>
        }
    }
</ul>
